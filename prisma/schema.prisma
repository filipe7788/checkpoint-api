generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== ENUMS ====================

enum UserRole {
  user
  moderator
  admin
}

enum GameStatus {
  playing
  completed
  dropped
  want_to_play
}

enum Platform {
  steam
  xbox
  psn
  nintendo
  epic
}

enum ActivityType {
  started_playing
  completed
  reviewed
  liked_review
  followed_user
}

// ==================== MODELS ====================

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  username        String   @unique
  passwordHash    String
  avatar          String?
  bio             String?
  role            UserRole @default(user)
  isBanned        Boolean  @default(false)
  banReason       String?
  bannedAt        DateTime?
  followersCount  Int      @default(0)
  followingCount  Int      @default(0)

  // OAuth fields
  googleId        String?  @unique
  appleId         String?  @unique
  profileImageUrl String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  userGames           UserGame[]
  platformConnections PlatformConnection[]
  oauthConnections    OAuthConnection[]
  activities          Activity[]           @relation("UserActivities")
  followers           Follow[]             @relation("Following")
  following           Follow[]             @relation("Followers")
  reviewLikes         ReviewLike[]
  reviewReplies       ReviewReply[]        @relation("ReviewReplies")

  @@index([username])
  @@index([email])
  @@index([googleId])
  @@index([appleId])
}

model Game {
  id          String   @id @default(uuid())
  igdbId      Int      @unique
  name        String
  slug        String
  summary     String?
  coverUrl    String?
  releaseDate DateTime?
  genres      String[]
  platforms   String[]
  igdbRating  Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userGames     UserGame[]
  activities    Activity[]
  titleMappings GameTitleMapping[]

  @@index([igdbId])
  @@index([name])
}

model UserGame {
  id           String     @id @default(uuid())
  userId       String
  gameId       String
  status       GameStatus
  platform     String
  playtime     Int?
  lastPlayedAt DateTime?
  startedAt    DateTime?
  completedAt  DateTime?
  favorite     Boolean    @default(false)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game    Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  reviews Review[]

  @@unique([userId, gameId, platform])
  @@index([userId])
  @@index([gameId])
  @@index([status])
}

model Review {
  id               String   @id @default(uuid())
  userGameId       String
  rating           Int
  text             String?
  containsSpoilers Boolean  @default(false)
  likesCount       Int      @default(0)
  repliesCount     Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  userGame   UserGame      @relation(fields: [userGameId], references: [id], onDelete: Cascade)
  likes      ReviewLike[]
  replies    ReviewReply[]
  activities Activity[]

  @@index([userGameId])
  @@index([rating])
  @@index([createdAt])
}

model PlatformConnection {
  id               String    @id @default(uuid())
  userId           String
  platform         Platform
  platformUserId   String
  platformUsername String?
  accessToken      String
  refreshToken     String?
  tokenExpiresAt   DateTime?
  lastSyncAt       DateTime?
  lastSyncError    String?
  isActive         Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
  @@index([userId])
  @@index([platform])
}

model Follow {
  id          String   @id @default(uuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower  User @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

model ReviewLike {
  id        String   @id @default(uuid())
  userId    String
  reviewId  String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@unique([userId, reviewId])
  @@index([userId])
  @@index([reviewId])
}

model ReviewReply {
  id        String   @id @default(uuid())
  reviewId  String
  userId    String
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user   User   @relation("ReviewReplies", fields: [userId], references: [id], onDelete: Cascade)

  @@index([reviewId])
  @@index([userId])
  @@index([createdAt])
}

model Activity {
  id             String       @id @default(uuid())
  userId         String
  type           ActivityType
  targetGameId   String?
  targetReviewId String?
  targetUserId   String?
  metadata       Json?
  createdAt      DateTime     @default(now())

  user         User    @relation("UserActivities", fields: [userId], references: [id], onDelete: Cascade)
  targetGame   Game?   @relation(fields: [targetGameId], references: [id], onDelete: SetNull)
  targetReview Review? @relation(fields: [targetReviewId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([type])
  @@index([createdAt])
}

model GameTitleMapping {
  id            String   @id @default(uuid())
  platform      Platform
  originalTitle String
  normalizedTitle String
  gameId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([platform, originalTitle])
  @@index([platform])
  @@index([originalTitle])
  @@index([gameId])
}

model OAuthConnection {
  id                  String    @id @default(uuid())
  userId              String
  provider            String    // steam, google, apple
  providerUserId      String    // Encrypted provider user ID
  providerUsername    String?   // Display name from provider
  providerAvatar      String?   // Avatar URL from provider
  encryptedData       String    // Encrypted JSON with sensitive OAuth data
  lastRefreshedAt     DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
  @@index([userId])
  @@index([provider])
}
