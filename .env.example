# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://checkpoint:checkpoint@db:5432/checkpoint

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# IGDB (Twitch Developer - https://dev.twitch.tv/console/apps)
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret

# Steam (https://steamcommunity.com/dev/apikey)
STEAM_API_KEY=your-steam-api-key

# Xbox (Microsoft Azure AD - https://portal.azure.com)
XBOX_CLIENT_ID=your-xbox-client-id
XBOX_CLIENT_SECRET=your-xbox-client-secret
XBOX_REDIRECT_URI=https://api.checkpoints.cc/api/sync/callback/xbox

# PSN (Experimental - requires NPSSO token from user)
# No config needed - users provide their own NPSSO

# Nintendo (Experimental)
# No config needed - uses nintendo-switch-online-api

# Epic (Experimental)
# No config needed - unofficial API

# URLs
APP_URL=https://api.checkpoints.cc
FRONTEND_URL=https://checkpoints.cc

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (for password reset - configure later)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@checkpoint.app
