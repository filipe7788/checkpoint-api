# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://checkpoint:checkpoint@db:5432/checkpoint

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# IGDB (Twitch Developer - https://dev.twitch.tv/console/apps)
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret

# Steam (https://steamcommunity.com/dev/apikey)
STEAM_API_KEY=your-steam-api-key

# Xbox (Microsoft Azure AD - https://portal.azure.com)
XBOX_CLIENT_ID=your-xbox-client-id
XBOX_CLIENT_SECRET=your-xbox-client-secret
XBOX_REDIRECT_URI=https://api.checkpoints.cc/api/sync/callback/xbox

# PSN (Experimental - requires NPSSO token from user)
# No config needed - users provide their own NPSSO

# Nintendo (Experimental)
# No config needed - uses nintendo-switch-online-api

# Epic (Experimental)
# No config needed - unofficial API

# OAuth - Google (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth - Apple (https://developer.apple.com/account/resources/identifiers/list/serviceId)
APPLE_CLIENT_ID=your-apple-service-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key-string

# URLs
API_URL=https://api.checkpoints.cc
APP_URL=https://checkpoints.cc
APP_DEEP_LINK=checkpoint://
FRONTEND_URL=https://checkpoints.cc

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (for password reset - configure later)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@checkpoint.app
